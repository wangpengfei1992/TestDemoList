<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/goToEqView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我查看自定义EqView"
        android:padding="15dp"
        android:background="#f0f0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/goToClickEdiet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点我去测试句子编辑"
        android:layout_margin="10dp"
        android:padding="15dp"
        android:background="#f0f0"
        app:layout_constraintTop_toBottomOf="@+id/goToEqView"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:layout_constraintTop_toBottomOf="@+id/goToClickEdiet"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>